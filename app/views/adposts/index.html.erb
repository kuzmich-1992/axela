<div class="container">
  <div class="row">
    <div class="col-md-8">
      <ol class="adposts">
        <%= render @adposts %>
      </ol>
    </div>

    <div class="col-md-4">
        <div class="jumbotron jumbotron-fluid" style="background-color: #FFFF99;">
          <%if user_signed_in?%>
            <div class="container text-center">
            <div class="form-group">
            <%= form_for Adpost.new do |f| %>
              <p><%= f.label :price %></p>
              <p><%= f.text_field :price %></p>
              <p><%= f.label :year %></p>
              <p><%= f.text_field :year %></p>
              <p><label for="model">Model</label></p>
              <p>
                <%= f.select :model, ['mazda axela, JP specs', 'mazda-3, worldwide specs']%>	
              </p>
              <p><label for="serie">Serie</label></p>
              <p>
                <%= f.select :serie, ['BK serie', 'BL serie']%>	
              </p>
              <p><label for="body">Body</label></p>
              <p>
                <%= f.select :body, ['sedan', 'hatchback']%>	
              </p>
              <p><label for="gearbox">Type of gear</label></p>
              <p>
                <%= f.select :gearbox, ['automatic gearbox', 'manual gearbox']%>	
              </p>
              <p><label for="engine_type">Engine type</label></p>
              <p>
                <%= f.select :engine_type, ['petrol engine', 'diesel engine']%>	
              </p>
              <p><%= f.label :location %></p>
              <p><%= f.text_field :location %></p>
              <p><%= f.label :adpost_image %></p>
              <p><%= f.file_field :adpost_image %></p>
              <p><%= f.submit "Add advert", class: "btn btn-primary" %></p>
            <% end %>
            </div>
            </div>
          <%end%>
        </div>
    </div>
  </div>
</div>